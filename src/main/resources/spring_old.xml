<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.justalex.spring.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="com.justalex.spring.ConsoleEventLogger"/>

    <bean id="app" class="com.justalex.spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="com.justalex.spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.justalex.spring.FileEventLogger" init-method="init">
        <constructor-arg value="EventLogs.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.justalex.spring.CacheFileEventLogger" parent="fileEventLogger">
        <constructor-arg value="3" type="int"/>
    </bean>
</beans>